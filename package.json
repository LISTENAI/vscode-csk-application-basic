{
  "name": "csk-application-basic",
  "displayName": "CSK Application Develop Plugin",
  "description": "VSCode extension for CSK Application Develop Tool.",
  "version": "0.0.1",
  "publisher": "listenai",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:csk.menu",
    "onCommand:csk-application-basic.memory-report",
    "onCommand:csk-application-basic.welcome"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "csk-application-basic.memory-report",
        "title": "Memory Report"
      },
      {
        "command": "csk-application-basic.welcome",
        "title": "Csk Welcome"
      },
      {
        "command": "csk.refreshMenu",
        "title": "Csk Menu Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "csk-application-basic.open-application",
        "title": "打开应用项目"
      },
      {
        "command": "csk-application-basic.create-application",
        "title": "创建应用项目"
      },
      {
        "command": "csk-application-basic.open-document",
        "title": "打开开发文档"
      },
      {
        "command": "csk-application-basic.info",
        "title": "本机开发信息"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "csk",
          "title": "csk application",
          "icon": "./assets/Icon_commands.svg"
        }
      ]
    },
    "views": {
      "csk": [
        {
          "id": "csk.menu",
          "name": "csk快捷菜单"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "csk.refreshMenu",
          "when": "view == csk.menu",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "npm run build:react && npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "build:react": "cd react-app && npm run build-all",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.49",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "json-loader": "^0.5.7",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "simple-git": "^3.14.0"
  }
}
